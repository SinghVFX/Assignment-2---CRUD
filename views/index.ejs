<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-post" class="border-shadow">
        <span class="text-gradient"
          >Make a New Post <i class="fas fa-post"></i
        ></span>
      </a>

      <div>
        <a href="/register-user" class="btn-auth btn-primary">
          <span>Register User <i class="fas fa-post"></i></span>
        </a>
        <a href="/signin-user" class="btn-auth btn-secondary border-shadow">
          <span>Sign In <i class="fas fa-post"></i></span>
        </a>
        <button class="btn-auth btn-danger">Log Out</button>
      </div>
    </div>

    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Author</th>
            <th>Title</th>
            <th>Subhead</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>
          <%- include('include/_show') %>
        </tbody>
      </table>
    </form>
  </div>

  </section>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
