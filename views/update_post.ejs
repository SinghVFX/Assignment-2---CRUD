<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> Back</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Post</h2>
      <span class="text-light">Update your post</span>
    </div>

    <form method="POST" id="update_post">
      <div class="new_post">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= post._id %>" />
          <input
            type="text"
            name="name"
            value="<%= post.name %>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="title" class="text-light">Title</label>
          <input
            type="text"
            name="title"
            value="<%= post.title%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="subheading" class="text-light">Subheading</label>
          <input
            type="text"
            name="subheading"
            value="<%= post.subheading%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="content" class="text-light">Description</label>
          <input
            type="text"
            name="content"
            value="<%= post.content%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
